# NexusCargo AI platform environment template.
# Use Secret Manager in staging/prod and only local placeholders in dev.

APP_NAME=NexusCargo AI Platform
ENVIRONMENT=dev

# API gateway
APP_PORT=8080
TENANT_HEADER_NAME=X-Tenant-Id

# Database (Cloud SQL PostgreSQL in non-local environments)
DATABASE_URL=postgresql+psycopg://nexuscargo:replace-me@127.0.0.1:5432/nexuscargo

# Auth/OIDC
AUTH_ISSUER=nexuscargo-auth
AUTH_AUDIENCE=nexuscargo-api
AUTH_JWT_SECRET=replace-with-secret-manager-value
AUTH_REFRESH_SECRET=replace-with-secret-manager-value
ACCESS_TOKEN_TTL_MINUTES=30
REFRESH_TOKEN_TTL_DAYS=7

# Secret Manager integration
SECRET_MANAGER_ENABLED=false
SECRET_MANAGER_PROJECT_ID=

# Eventing / storage
EVENT_BUS_BACKEND=memory
GCP_PROJECT_ID=
GCP_PUBSUB_TOPIC_PREFIX=nexuscargo
STORAGE_BACKEND=local
STORAGE_LOCAL_ROOT=/tmp/nexuscargo-storage
GCS_RAW_BUCKET=
GCS_PROCESSED_BUCKET=

# Workflow
REVIEW_CONFIDENCE_THRESHOLD=0.8
WEBHOOK_SIGNING_SECRET=replace-with-secret-manager-value
WEBHOOK_MAX_RETRIES=5
